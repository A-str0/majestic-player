// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Запуск (Windows)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/MusicPlayer.Avalonia/bin/Debug/net8.0/MusicPlayer.Avalonia.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "Запуск (Linux)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": ["run", "--project", "MusicPlayer.Avalonia"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}